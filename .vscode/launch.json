{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch from scratch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/scratch/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "preLaunchTask": "Build",
            "cwd": "${workspaceFolder}/results",
            "environment": [
                {
                    "name": "DYLD_LIBRARY_PATH",
                    "value": "./build/lib/"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb",
            "miDebuggerPath": "/usr/local/Cellar/llvm/9.0.0_1/bin/lldb-mi",
        },
        {
            "name": "(CodeLLDB) Launch variants-comparison",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/scratch/quic-variants-comparison-variable-rate", // Local path.
            "cwd": "${workspaceFolder}/results",
            "env": {
                "DYLD_LIBRARY_PATH": "${workspaceFolder}/build/lib/"
            },
            "stdio": [null, null, "${workspaceFolder}/results/quic-variants-comparison2.log"],
            "preLaunchTask": "Build",
        },
        {
            "name": "(gdb) Launch from scratch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/scratch/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "./build/lib/"
                }
            ],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
         }
    ]
}